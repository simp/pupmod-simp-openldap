threads <%= @threads.to_i %>
uid nslcd
gid nslcd
<% @uri.each do |uri| -%>
uri <%= uri %>
<% end -%>
ldap_version <%= @ldap_version %>
<% if not @bindpw.empty? then -%>
binddn <%= @binddn %>
bindpw <%= @bindpw %>
<% end -%>
<% if not @rootpwmoddn.empty? then -%>
rootpwmoddn <%= @rootpwmoddn %>
<% end -%>
# Not yet implemented
