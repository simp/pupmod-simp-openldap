bind_timelimit <%= @bind_timelimit %>
timelimit <%= @timelimit %>
idle_timelimit <%= @idle_timelimit %>
reconnect_sleeptime <%= @reconnect_sleeptime %>
reconnect_retrytime <%= @reconnect_retrytime %>
<% if @start_tls then -%>
ssl start_tls
<% else -%>
ssl <%= @ssl %>
<% end -%>
tls_reqcert <%= @tls_reqcert %>
<% unless @_tls_cacertdir.empty? -%>
tls_cacertdir <%= @_tls_cacertdir %>
<% end -%>
<% unless @_tls_cacertfile.empty? -%>
tls_cacertfile <%= @_tls_cacertfile %>
<% end -%>
<% if @tls_randfile then -%>
tls_randfile <%= @tls_randfile %>
<% end -%>
tls_ciphers <%= @tls_ciphers.join(':') %>
<% unless @_tls_cert.empty? -%>
tls_cert <%= @_tls_cert %>
<% end -%>
<% unless @_tls_key.empty? -%>
tls_key <%= @_tls_key %>
<% end -%>
pagesize <%= @pagesize %>
<% if Array(@nss_initgroups_ignoreusers).empty? then -%>
nss_initgroups_ignoreusers ALLLOCAL
<% else -%>
nss_initgroups_ignoreusers <%= Array(@nss_initgroups_ignoreusers).join(',') %>
<% end -%>
validnames <%= @validnames %>
<% if not @pam_authz_search.empty? then -%>
pam_authz_search <%= @pam_authz_search %>
<% end -%>
